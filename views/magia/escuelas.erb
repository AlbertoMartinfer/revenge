<%= erb :menu %><br>

<h1>Escuelas de la magia</h1>
<table id='tlabel'>
	<tbody>
		<tr>
			<% escuelas.keys.each do |escuela| %>
				<td width='10%'>
					<% img_path = "'../images/schools/#{escuela}.png'" %>
					<img src=<%=img_path%> alt=<%= escuela %>, id='icon4' />
					<br>
					<table id='table-2'>
						<thead>
							<tr>
								<th><%= escuela.capitalize %></th>
							</tr>	
						</thead>
						<tbody>
							<tr><td>Nivel 1</td></tr>
							<tr><td>Nivel 2</td></tr>
							<tr><td>Nivel 3</td></tr>
							<tr><td>Nivel 4</td></tr>
							</tr>
						</tbody>
					</table>
				</td>	
			<% end %>	
		</tr>
	</tbody>
</table>